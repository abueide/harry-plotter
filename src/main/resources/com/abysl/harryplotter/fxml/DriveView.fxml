<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.abysl.harryplotter.view.DriveView">
   <children>
      <HBox prefHeight="100.0" prefWidth="200.0" spacing="10.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <VBox alignment="CENTER" maxWidth="350.0" prefHeight="650.0" prefWidth="350.0" spacing="10.0">
               <children>
                  <ListView fx:id="driveList" maxWidth="350.0" minWidth="200.0" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS" />
               </children>
            </VBox>
            <VBox HBox.hgrow="ALWAYS">
               <children>
                  <HBox maxHeight="280.0">
                     <children>
                        <VBox minWidth="150.0" spacing="18.0">
                           <children>
                              <Label text="Drive Name" />
                              <Label text="Drive Type" />
                              <Label text="Max Phase 1 Plots" />
                              <Label text="Max Phase 2-4 Plots" />
                              <Label text="Max Concurrent Plots" />
                              <Label text="Static Stagger Time" />
                           </children>
                           <padding>
                              <Insets top="5.0" />
                           </padding>
                        </VBox>
                        <VBox spacing="10.0" HBox.hgrow="ALWAYS">
                           <children>
                              <TextField fx:id="driveName" maxWidth="200.0" />
                              <HBox>
                                 <children>
                                    <ComboBox fx:id="driveType" maxWidth="200.0" HBox.hgrow="ALWAYS" />
                                 </children>
                              </HBox>
                              <TextField fx:id="maxP1" maxWidth="30.0" />
                              <TextField fx:id="maxOther" maxWidth="30.0" />
                              <TextField fx:id="maxConcurrent" maxWidth="30.0" />
                              <HBox alignment="CENTER_LEFT" spacing="10.0">
                                 <children>
                                    <TextField fx:id="staticStagger" maxWidth="30.0" />
                                    <CheckBox fx:id="staticIgnore" mnemonicParsing="false" text="Ignore static stagger if no plots are running on the drive" />
                                    <HBox alignment="BOTTOM_RIGHT" spacing="10.0" HBox.hgrow="ALWAYS">
                                       <children>
                                          <Button minWidth="55.0" mnemonicParsing="false" onAction="#onCancel" text="Cancel" />
                                          <Button minWidth="55.0" mnemonicParsing="false" onAction="#onNew" text="New" />
                                          <Button minWidth="55.0" mnemonicParsing="false" onAction="#onSave" text="Save" />
                                       </children>
                                    </HBox>
                                 </children>
                              </HBox>
                           </children>
                        </VBox>
                     </children>
                  </HBox>
                  <fx:include fx:id="driveStats" source="DriveStatsView.fxml" VBox.vgrow="ALWAYS" />
               </children>
            </VBox>
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</AnchorPane>
