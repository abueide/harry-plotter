<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns:fx="http://javafx.com/fxml/1" alignment="CENTER" prefHeight="400.0" prefWidth="600.0" spacing="10.0"
      xmlns="http://javafx.com/javafx/16" fx:controller="com.abysl.harryplotter.view.settings.HarryPlotterSettingsView">
  <padding>
    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
  </padding>
  <children>
    <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" VBox.vgrow="ALWAYS">
      <children>
        <Button mnemonicParsing="false" onAction="#onReset" text="Reset Settings"/>
      </children>
    </VBox>
    <HBox alignment="BOTTOM_RIGHT">
      <children>
        <Button fx:id="close" mnemonicParsing="false" onAction="#onClose" text="Close"/>
      </children>
    </HBox>
  </children>
</VBox>
