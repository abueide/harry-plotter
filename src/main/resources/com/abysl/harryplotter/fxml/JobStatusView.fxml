<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<HBox prefHeight="365.0" prefWidth="900.0" spacing="10.0" VBox.vgrow="ALWAYS" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.abysl.harryplotter.view.JobStatusView">
  <children>
      <VBox>
         <HBox.margin>
            <Insets />
         </HBox.margin>
         <children>
            <HBox fx:id="jobStats" VBox.vgrow="ALWAYS">
               <children>
                <VBox maxWidth="150.0" prefWidth="150.0" spacing="20.0" HBox.hgrow="ALWAYS">
                  <children>
                    <Label layoutX="10.0" layoutY="193.0" text="Current Status" />
                    <Label text="Plot ID" />
                    <Label text="Last Plot Time" />
                    <Label text="Average Plot Time" />
                    <Label text="Total Plots Created" />
                    <Label text="Estimated Plots Per Day" />
                    <Label text="Plots in last 24 hours" />
                  </children>
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                </VBox>
                <VBox maxWidth="150.0" prefWidth="150.0" spacing="20.0" HBox.hgrow="ALWAYS">
                  <children>
                    <Label fx:id="currentStatus" layoutX="10.0" layoutY="199.0" text="Not Running" />
                    <Label fx:id="plotId" text="?" />
                    <Label fx:id="lastPlotTime" text="6 hr 50 s (21650s)" />
                    <Label fx:id="averagePlotTime" text="6 hr 30 s (21630)" />
                    <Label fx:id="totalPlotsCreated" text="3" />
                    <Label fx:id="estimatedPlotsDay" text="1.7" />
                    <Label fx:id="averagePlotsDay" text="1.8" />
                  </children>
                </VBox>
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </HBox>
            <HBox alignment="CENTER" minHeight="35.0" spacing="10.0" />
         </children>
      </VBox>
    <VBox spacing="10.0" HBox.hgrow="ALWAYS">
      <children>
        <TextArea fx:id="logsWindow" editable="false" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS" />
        <HBox alignment="CENTER" spacing="10.0">
          <children>
            <Button mnemonicParsing="false" onAction="#onStop" text="Stop" />
            <Button mnemonicParsing="false" onAction="#onStart" text="Start" />
          </children>
        </HBox>
      </children>
    </VBox>
  </children>
</HBox>
